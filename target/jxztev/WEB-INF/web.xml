<?xml version="1.0" encoding="UTF-8"?>
<web-app id="jxztev_WebApp_00000001" metadata-complete="true">
	<display-name>JXSL改造系统服务</display-name>
	<!-- Webapp配置 -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>jxztev.root</param-value>
	</context-param>

    <!-- log4j2-begin -->
    <context-param  id="jxztev_ParamValue_00000002">
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j2.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>log4jServletFilter</filter-name>
        <filter-class>org.apache.logging.log4j.web.Log4jServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>log4jServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <!-- log4j2-end -->

	<!-- Spring配置文件 -->
	<context-param id="jxztev_ParamValue_00000003">
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring-redis.xml,
			classpath:spring-application.xml
		</param-value>
	</context-param>
	<!--spring监听器 -->
	<listener id="jxztev_Listener_00000009">
		<listener-class>org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<!-- 捕获spring配置文件 -->
	<listener id="jxztev_Listener_00000010">
		<listener-class>com.jxztev.listener.EnvironmentInitListener
		</listener-class>
	</listener>
	<!-- 防止spring内存溢出监听器，比如quartz -->
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener
		</listener-class>
	</listener>
	<!-- spring mvc servlet -->
	<servlet id="jxztev_Servlet_00000004">
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping id="jxztev_ServletMapping_00000005">
		<servlet-name>dispatcherServlet</servlet-name>
		<!-- 此处也可以配置成 *.do 形式 -->
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- 编码处理过滤器 start-->
	<filter id="jxztev_Filter_00000006">
		<filter-name>springUtf8Encoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping id="jxztev_ServletMapping_00000007">
		<filter-name>springUtf8Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 编码处理过滤器 end-->
	
	<!--连接池启用Web监控统计功能start -->
	<filter id="jxztev_Filter_000000099">
		<filter-name>DruidWebStatFilter</filter-name>
		<filter-class>com.alibaba.druid.support.http.WebStatFilter
		</filter-class>
		<init-param>
			<param-name>exclusions</param-name>
			<param-value>*.js,*.gif,*.jpg,*.png,*.css,*.ico,/druid/*
			</param-value>
		</init-param>
        <!-- 缺省sessionStatMaxCount是1000个。你可以按需要进行配置 -->
        <init-param>
            <param-name>sessionStatMaxCount</param-name>
            <param-value>1000</param-value>
        </init-param>
        <!-- druid 0.2.7版本开始支持profile，配置profileEnable能够监控单个url调用的sql列表 -->
        <init-param>
            <param-name>profileEnable</param-name>
            <param-value>true</param-value>
        </init-param>
        <!-- Session统计功能 可酌情关闭-->
        <init-param>
            <param-name>sessionStatEnable</param-name>
            <param-value>true</param-value>
        </init-param>
	</filter>
	<filter-mapping id="jxztev_ServletMapping_0000000777">
		<filter-name>DruidWebStatFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet  id="jxztev_Servlet_0000001999">
		<servlet-name>DruidStatView</servlet-name>
		<servlet-class>com.alibaba.druid.support.http.StatViewServlet
		</servlet-class>
	</servlet>
	<servlet-mapping id="jxztev_ServletMapping_00000007887">
		<servlet-name>DruidStatView</servlet-name>
		<url-pattern>/druid/*</url-pattern>
	</servlet-mapping>
	<!--连接池启用Web监控统计功能end -->
	
	<welcome-file-list>
		<welcome-file>/index.html</welcome-file>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>

	<!-- session配置 -->
	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>
	
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.jsp</location>
	</error-page>
</web-app>
